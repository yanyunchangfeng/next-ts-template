{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "prettier": "prettier -c --write  **/* --cache",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.14"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "prettier --write  --ignore-unknown",
    "*.{json,less,scss,md}": "prettier --write --ignore-unknown"
  }
}
